<div class="post" data-isbn={{id}}>
  <div class="post-info">
    <div class="book-cover">
      <img src={{attributes.coverImageUrl}} alt="">
    </div>
    <div class="book-info">
      <p>Title: {{attributes.title}}</p>
      <p>Edition: {{attributes.edition}}</p>
      <p>Author: {{attributes.author}}</p>
      <p>ISBN: {{id}}</p>
    </div>
  </div>
  <div class="sell-button">
    <input type="button" value="Sell This Book" class="btn primary-color" id="sell-btn">
  </div>
</div>